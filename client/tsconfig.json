{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "strictNullChecks": true,
    "module": "ES2020",
    "types": ["svelte", "node", "jest", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "svelte-materialify/src": ["node_modules/svelte-materialify/@types"]
    }
  }
}
